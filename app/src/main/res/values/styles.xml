<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ClockTextStyle">
        <item name="android:shadowColor">@color/black_half_transparent</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">5</item>


        <item name="android:textColor">@color/white_text</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NotificationMaterialText">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:ellipsize">marquee</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NotificationMaterialTitle" parent="NotificationMaterialText">
        <item name="android:textSize">@dimen/notification_cell_material_title_text_size</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginEnd">@dimen/notification_cell_material_title_margin_end</item>
    </style>
    
    <style name="NotificationMaterialMainText" parent="NotificationMaterialText">
        <item name="android:textSize">@dimen/notification_cell_material_main_text_text_size</item>
        <item name="android:textColor">@color/black_text_secondary</item>
    </style>

    <style name="NotificationMaterialWhenText" parent="NotificationMaterialMainText">
        <item name="android:layout_alignParentEnd">true</item>
    </style>



</resources>
