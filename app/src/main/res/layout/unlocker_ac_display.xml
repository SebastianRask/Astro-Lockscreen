<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/unlock_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        app:srcCompat="@drawable/ic_white_circle"
        android:id="@+id/circle_unlock_container"
        android:layout_width="@dimen/lockscreen_ac_display_unlock_distance"
        android:layout_height="@dimen/lockscreen_ac_display_unlock_distance" />

    <android.support.v7.widget.AppCompatImageView
        app:srcCompat="@drawable/ic_lock_black"
        android:layout_centerInParent="true"
        android:id="@+id/img_unlock_lock"
        android:layout_width="25dp"
        android:layout_height="25dp" />

</RelativeLayout>